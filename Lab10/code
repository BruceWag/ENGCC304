#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main(){
    char word[100];
    int len, i, j;
    int isPalindrome = 1;

    //รับค่าจากผู้ใช้
    printf("Enter word : \n");
    scanf("%s", word);

    len = strlen(word);

    //ตรวจสอบว่าเป้น palindrome หรือไม่
    for (i = 0, j = len - 1; i < j; i++, j--) {
        if (tolower(word[i]) != tolower(word[j])) {
            isPalindrome = 0;
            break;
        }
    }

    //แสดงผลลัพธ์
    if(isPalindrome)
    printf("Pass \n");
    else
    printf("Not Pass \n");

    return 0;
}
