#include <stdio.h>

int main() {
    // กำหนดชุดข้อมูลเริ่มต้น
    int data[] = { 15, 7, 25, 3, 73, 32, 45 };
    int n = sizeof(data) / sizeof(data[0]); // หาจำนวนสมาชิกในอาร์เรย์
    int i, j, temp; // ตัวแปรสำหรับลูปและเก็บค่าชั่วคราวในการสลับ
    int position_of_32 = -1; // ตัวแปรสำหรับเก็บตำแหน่ง (Index) ของ 32

    // -------------------------------------------------------------------
    // พิมพ์ข้อมูลเดิมก่อนการเรียงลำดับ
    // -------------------------------------------------------------------
    printf("Old Series : ");
    for (i = 0; i < n; i++) {
        printf("%d", data[i]);
        if (i < n - 1) {
            printf(", ");
        }
    }
    printf("\n");

    // -------------------------------------------------------------------
    // ส่วนของการเรียงลำดับ (ใช้ Bubble Sort)
    // -------------------------------------------------------------------
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - 1 - i; j++) {
            // เปรียบเทียบและสลับตำแหน่งถ้าตัวหน้ามากกว่าตัวหลัง (เรียงจากน้อยไปมาก)
            if (data[j] > data[j + 1]) {
                temp = data[j];
                data[j] = data[j + 1];
                data[j + 1] = temp;
            }
        }
    }

    // -------------------------------------------------------------------
    // ส่วนของการพิมพ์ข้อมูลที่เรียงลำดับแล้ว
    // -------------------------------------------------------------------
    printf("New Series : ");
    for (i = 0; i < n; i++) {
        printf("%d", data[i]);
        if (i < n - 1) {
            printf(", ");
        }
    }
    printf("\n");

    // -------------------------------------------------------------------
    // ส่วนของการระบุตำแหน่งของหมายเลข 32
    // -------------------------------------------------------------------
    for (i = 0; i < n; i++) {
        if (data[i] == 32) {
            // ตำแหน่งตาม Index (เริ่มนับจาก 0)
            position_of_32 = i;
            break; // พบแล้วจึงออกจากลูป
        }
    }

    // -------------------------------------------------------------------
    // ส่วนของการแสดงผลลัพธ์สุดท้าย
    // -------------------------------------------------------------------
    if (position_of_32 != -1) {
        printf("Pos of 32 : %d\n", position_of_32);
    } else {
        printf("Pos of 32 : Not Found\n");
    }

    return 0;
}
