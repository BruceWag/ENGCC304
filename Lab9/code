#include <stdio.h>
#include <stdbool.h>

// ฟังก์ชันตรวจสอบจำนวนเฉพาะ
bool isPrime(int num) {
    if (num < 2) 
        return false; 

    for (int i = 2; i * i <= num; i++) {
        if (num % i == 0) 
            return false;
    }
    return true;
}

int main() {
    int n;

    // รับขนาดอาเรย์
    printf("Enter N :\n");
    scanf("%d", &n);

    int arr[n];

    // รับค่าจากผู้ใช้
    for (int i = 0; i < n; i++) {
        printf("Enter value[%d] :\n", i);
        scanf("%d", &arr[i]);
    }

    // แสดง Index
    printf("Index:");
    for (int i = 0; i < n; i++) {
        printf("%3d", i);
    }
    printf("\n");

    // แสดง Array (จำนวนเฉพาะหรือ #)
    printf("Array:");
    for (int i = 0; i < n; i++) {
        if (isPrime(arr[i])) {
            printf("%3d", arr[i]);
        } else {
            printf("%3c", '#');
        }
    }
    printf("\n");

    return 0;
}
